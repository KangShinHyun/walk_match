<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true">
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:background="@drawable/nv_bar_back">
   		<ImageView
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:background="@drawable/nv_friends"
   		    android:layout_alignParentBottom="true"
   		    android:layout_centerInParent="true"
   		    android:layout_marginBottom="10dip"/>
   		<RelativeLayout
   		    android:id="@+id/btn_chat"
   		    android:layout_width="58dip"
   		    android:layout_height="58dip"
   		    android:layout_alignParentRight="true"
   		    android:layout_alignParentBottom="true"
   		    android:visibility="gone">
   		    <ImageView
   		        android:layout_width="match_parent"
   		        android:layout_height="match_parent"
   		        android:background="@drawable/nv_chat_icon">
   		    </ImageView>
   		    <LinearLayout
   		        android:layout_width="25dip" 
   		        android:layout_height="25dip"
   		        android:background="@drawable/nv_chat_icon_number"
   		        android:gravity="center"
   		        android:layout_marginLeft="5dip"
   		        android:layout_marginTop="5dip">
   		        <TextView 
   		            android:id="@+id/btn_chat_text"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:maxLength="2"
   		            android:textSize="10dip"
   		            android:textColor="#ffffff"
   		            android:text="2"
   		            android:layout_gravity="center"/>
   		    </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
   </LinearLayout>
  
    
   <RelativeLayout
       android:id="@+id/aaa"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/layout_bottom"
       android:layout_below="@+id/layout_top"
       android:background="@drawable/background">
       <RelativeLayout 
           android:id="@+id/middle_layout_top"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="@drawable/my_friends_n_line"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="5dip"
           android:layout_alignParentTop="true"
           android:layout_marginBottom="5dip">
           <TextView
               android:id="@+id/friend_nubmer_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="10"
               android:textSize="11dip"
               android:textColor="#ffffff"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="15dip"
               android:visibility="gone"/>
       </RelativeLayout> 
       <LinearLayout 
           android:id="@+id/middle_layout_middle2"
           android:layout_width="338dip"
           android:layout_height="match_parent"
           android:layout_above="@+id/middle_layout_bottom"
    	   android:layout_below="@+id/middle_layout_top"
    	   android:orientation="vertical"
    	   android:layout_centerHorizontal="true">
           
       </LinearLayout>	   <RelativeLayout 
           android:id="@+id/middle_layout_bottom"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:background="@drawable/find_friends_button"
           android:layout_centerHorizontal="true"
           android:layout_marginBottom="5dip">
           
       </RelativeLayout>
   </RelativeLayout>
   <LinearLayout
       android:id="@+id/layout_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">
   		    <ImageView
   		       android:id="@+id/btn_match"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_match"/>
       		<ImageView
   		       android:id="@+id/btn_friend"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_friends"/>
       		<ImageView
   		       android:id="@+id/btn_me"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_me"/>
       		<ImageView
   		       android:id="@+id/btn_ranking"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_rank"/>
    </LinearLayout>
</RelativeLayout>