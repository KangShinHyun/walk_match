<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/login2_background_01">
   <LinearLayout 
       android:id="@+id/sign_top"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_above="@+id/btn_join">
       
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center">
           <RelativeLayout
           android:layout_width="122dip"
           android:layout_height="122dip"
           android:orientation="vertical"
           android:layout_marginBottom="15dip"
           android:background="@drawable/login_join_picture">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/login_join_picture_text"
               android:layout_centerInParent="true"/>
           <ImageView
               android:id="@+id/photo_img"
	           android:layout_width="122dip"
	           android:layout_height="122dip"
	           android:orientation="vertical"/>
           
           </RelativeLayout>
       <EditText
               android:id="@+id/edit_txt_username"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="User Name"
               android:textColor="#ffffff"
               android:paddingLeft="40dip"
               android:layout_marginBottom="10dip"
               android:background="@drawable/back_username"
               android:textSize="14dip"/>
       <EditText
               android:id="@+id/edit_txt_email"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Email"
               android:textColor="#ffffff"
               android:paddingLeft="40dip"
               android:layout_marginBottom="10dip"
               android:background="@drawable/back_email"
               android:textSize="14dip"/>
       <EditText
               android:id="@+id/edit_txt_password"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:hint="Password"
               android:textColor="#ffffff"
               android:password="true"
               android:paddingLeft="40dip"
               android:layout_marginBottom="10dip"
               android:background="@drawable/back_pw"
               android:textSize="14dip"/>
       <LinearLayout
               android:id="@+id/edit_txt_nation"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="#ffffff"
               android:paddingLeft="40dip"
               android:layout_marginBottom="10dip"
               android:background="@drawable/back_nation"
               android:gravity="center_vertical">
               <TextView
                   android:id="@+id/edit_text_nation"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="16dip"
                   android:textColor="#828282"
                   android:text="nation"/>
         </LinearLayout>
        </LinearLayout>
   </LinearLayout>
   <LinearLayout
       android:id="@+id/btn_join"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:layout_centerInParent="true"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="15dip"
       android:background="@drawable/but_sign_up">
   </LinearLayout>
</RelativeLayout>