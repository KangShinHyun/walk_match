<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankActivity" >
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true">
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:background="@drawable/nv_bar_back">
   		<ImageView
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:background="@drawable/nv_ranking"
   		    android:layout_alignParentBottom="true"
   		    android:layout_centerInParent="true"
   		    android:layout_marginBottom="10dip"/>
   		<RelativeLayout
   		    android:id="@+id/btn_chat"
   		    android:layout_width="58dip"
   		    android:layout_height="58dip"
   		    android:layout_alignParentRight="true"
   		    android:layout_alignParentBottom="true">
   		    <ImageView
   		        android:layout_width="match_parent"
   		        android:layout_height="match_parent"
   		        android:background="@drawable/nv_chat_icon">
   		    </ImageView>
   		    <LinearLayout
   		        android:layout_width="25dip" 
   		        android:layout_height="25dip"
   		        android:background="@drawable/nv_chat_icon_number"
   		        android:gravity="center"
   		        android:layout_marginLeft="5dip"
   		        android:layout_marginTop="5dip">
   		        <TextView 
   		            android:id="@+id/btn_chat_text"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:maxLength="2"
   		            android:textSize="10dip"
   		            android:textColor="#ffffff"
   		            android:text="2"
   		            android:layout_gravity="center"/>
   		    </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
   </LinearLayout>
  
  
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/layout_bottom"
       android:layout_below="@+id/layout_top"
       android:background="@drawable/background">
      <LinearLayout 
	       android:id="@+id/layout_middle_top"
	       android:layout_width="match_parent"
	       android:layout_height="70dip"
	       android:orientation="horizontal"
	       android:layout_alignParentTop="true"
	       android:gravity="center">
	        <LinearLayout
	           android:id="@+id/btn_world"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:orientation="horizontal"
	           android:background="@drawable/up_tab_world_back1"
	           android:gravity="center">
	   		    <TextView
	   		        android:id="@+id/btn_world_txt"
	   		        android:layout_width="wrap_content"
	   		        android:layout_height="wrap_content"
	   		        android:background="@drawable/up_tab_world_text1"/>
	   		</LinearLayout>
	        
	        <LinearLayout
	           android:id="@+id/btn_frd"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:orientation="horizontal"
	           android:background="@drawable/up_tab_frd_back0"
	           android:gravity="center">
	   		     <TextView
	   		        android:id="@+id/btn_frd_txt"
	   		        android:layout_width="wrap_content"
	   		        android:layout_height="wrap_content"
	   		        android:background="@drawable/up_tab_frd_text0"/>
	   		 </LinearLayout>
	    </LinearLayout>
    	<LinearLayout
    	    android:id="@+id/layout_list_me"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_below="@+id/layout_middle_top"
    	    android:orientation="vertical"/>
    	<LinearLayout
    	    android:id="@+id/layout_me_content"
    	    android:layout_width="match_parent"
    	    android:layout_height="50dip"
    	    android:layout_alignParentBottom="true"
    	    android:orientation="vertical"/>
   </RelativeLayout>
   <LinearLayout
       android:id="@+id/layout_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">
   		    <ImageView
   		       android:id="@+id/btn_match"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_match"/>
       		<ImageView
   		       android:id="@+id/btn_friend"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_friends"/>
       		<ImageView
   		       android:id="@+id/btn_me"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_me"/>
       		<ImageView
   		       android:id="@+id/btn_ranking"
   		       android:layout_width="90dip"
   		       android:layout_height="wrap_content"
   		       android:background="@xml/btn_rank"/>
    </LinearLayout>
</RelativeLayout>