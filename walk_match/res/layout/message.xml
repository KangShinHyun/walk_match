<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RankActivity" >
    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="60dip"
        android:layout_alignParentTop="true">
        <RelativeLayout 
	        android:layout_width="match_parent"
	        android:layout_height="60dip"
	        android:background="@drawable/nv_bar_back">
   		<TextView
   		    android:id="@+id/title_name"
   		    android:layout_width="wrap_content"
   		    android:layout_height="wrap_content"
   		    android:textSize="20dip"
   		    android:textColor="#ffffff"
   		    android:text="Kang ShinHyun"
   		    android:layout_alignParentBottom="true"
   		    android:layout_centerInParent="true"
   		    android:layout_marginBottom="10dip"/>
   		<RelativeLayout
   		    android:id="@+id/btn_chat"
   		    android:layout_width="58dip"
   		    android:layout_height="58dip"
   		    android:layout_alignParentRight="true"
   		    android:layout_alignParentBottom="true"
   		    android:visibility="gone">
   		    <ImageView
   		        android:layout_width="match_parent"
   		        android:layout_height="match_parent"
   		        android:background="@drawable/nv_chat_icon">
   		    </ImageView>
   		    <LinearLayout
   		        android:layout_width="25dip" 
   		        android:layout_height="25dip"
   		        android:background="@drawable/nv_chat_icon_number"
   		        android:gravity="center"
   		        android:layout_marginLeft="5dip"
   		        android:layout_marginTop="5dip">
   		        <TextView 
   		            android:id="@+id/btn_chat_text"
   		            android:layout_width="wrap_content"
   		            android:layout_height="wrap_content"
   		            android:maxLength="2"
   		            android:textSize="10dip"
   		            android:textColor="#ffffff"
   		            android:text="2"
   		            android:layout_gravity="center"/>
   		    </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
   </LinearLayout>
  
  
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@+id/layout_bottom"
       android:layout_below="@+id/layout_top"
       android:background="@drawable/background">
     
    	<LinearLayout
    	    android:id="@+id/layout_list_me"
    	    android:layout_width="match_parent"
    	    android:layout_height="match_parent"
    	    android:layout_below="@+id/layout_middle_top"
    	    android:orientation="vertical"/>
    	
   </RelativeLayout>
   <LinearLayout
       android:id="@+id/layout_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:gravity="center"
       android:background="@drawable/msg_room_chat_back_black">
   		   <EditText
   		       android:id="@+id/text_bottom"
   		       android:layout_width="wrap_content"
   		       android:layout_height="wrap_content"
   		       android:background="@drawable/msg_room_chat_back_wht"
   		       android:textSize="14dip"
   		       android:paddingLeft="10dip"
   		       android:textColor="#000000"/>
   		   <LinearLayout
   		       android:id="@+id/text_bottom_send"
   		       android:layout_width="wrap_content"
   		       android:layout_height="wrap_content"
   		       android:orientation="vertical"
   		       android:background="@drawable/msg_room_chat_right_send"/>
    </LinearLayout>
</RelativeLayout>